<?xml version="1.0"?>  
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"  
                           "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">  

<module name="Checker">  
    <module name="TreeWalker">  
        
        <module name="ClassName">  
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/> <!-- Classes in PascalCase -->  
        </module>  
        
        <module name="MethodName">  
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/> <!-- Methods in camelCase -->  
        </module>  

        <module name="VariableName">  
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/> <!-- Variables in camelCase -->  
        </module>  

        <module name="LineLength">  
            <property name="max" value="100"/> <!-- Maximum line length -->  
        </module>  

        <module name="UnusedImports"/>  
        
        <module name="FileTabCharacter">  
            <property name="format" value="none"/> <!-- No tabs allowed -->  
        </module>  

    </module>  
</module>  